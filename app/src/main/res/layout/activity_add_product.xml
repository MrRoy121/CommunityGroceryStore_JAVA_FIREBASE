<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Admin.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Add Product"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="38sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:hint="Product Name"
        android:id="@+id/pname"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:textColorHint="#434343"
        android:padding="10dp"
        android:background="@drawable/circle_edittext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/pprice"
        android:hint="Product Price"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textColorHint="#434343"
        android:padding="10dp"
        android:background="@drawable/circle_edittext"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main">

        <TextView
            android:id="@+id/pcate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="Product Categrory"
            android:layout_marginTop="5dp"
            android:textColorHint="#434343"
            android:padding="10dp"
            android:background="@drawable/circle_edittext"/>
        <Spinner
            android:layout_width="match_parent"
            android:backgroundTint="#00C4FF"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:id="@+id/sp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/main">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/pimage"
                android:hint="  Product Image"
                android:gravity="center"
                android:drawableStart="@android:drawable/ic_input_add"
                android:drawableTint="@color/black"
                android:layout_marginTop="5dp"
                android:textColorHint="#434343"
                android:padding="10dp"
                android:background="@drawable/circle_edittext"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/main">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:id="@+id/img"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_edittext1"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/circle_button"
        android:layout_marginTop="10dp"
        android:text="Add"/>
<Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>

</LinearLayout>